

@model IEnumerable<Newsportal.Models.Post>


<div class="card my-4 mt-5">
    <h5 class="card-header bg-dark text-white text-center">Most recent news</h5>
    <div>
        <ul style="list-style-type: none;" class=" list-group list-group-flush">
            @foreach (var post in Model.Reverse().Take(10))
            {
                <li>
                    @Html.ActionLink(post.PostTitle, "Details", "Home", new { id = post.Id }, new { @class = "list-group-item list-group-item-action" })

                </li>
            }
        </ul>
    </div>
</div>