@using System.ComponentModel.DataAnnotations
@model Newsportal.Models.Post
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Post</h2>
@using (Html.BeginForm("Save", "Posts", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form-group">
        @Html.LabelFor(m => m.PostTitle)
        @Html.TextBoxFor(m => m.PostTitle, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.PostTitle)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Image)
        <input type="file" name="ImageFile" required="" />
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.CategoryId)
        @Html.DropDownListFor(m => m.CategoryId, new SelectList(Model.Categories, "Id", "Name"), "Select Category", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.CategoryId)

    </div>
    <div>
        @Html.LabelFor(m => m.PostDescription)
        @Html.TextAreaFor(m => m.PostDescription, new { @class = "form-control", resize = "horizontal", overflow = "hidden", rows = 10 })
        @Html.ValidationMessageFor(m => m.PostDescription)

    </div>







    @*<div class="form-group">
        @Html.LabelFor(m =>m.Post.Image)
        @Html.TextBoxFor(m =>m.Post.Image, new {@class="form-control"})
        @Html.ValidationMessageFor(m => m.Post.Image)

        </div>*@
    @Html.HiddenFor(m => m.Id)
    @Html.AntiForgeryToken()
    <input type="submit" value="Save" class="btn btn-primary" />

}
@section scripts
{

    @Scripts.Render("~/bundles/jqueryval")

}