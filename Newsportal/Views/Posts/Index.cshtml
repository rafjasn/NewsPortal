@using System.Web.Configuration
@using Newsportal.Models
@model IEnumerable<Newsportal.Models.Post>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<a href="~/Posts/New" class="btn btn-primary">Add post</a>
<table id="posts" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th scope="col">Title</th>
            <th scope="col">Category</th>
            <th scope="col">Added</th>
            <th scope="col">Last Update</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var post in Model)
        {


            <tr>
                <th scope="row">@Html.ActionLink(post.PostTitle, "Details", "Home", new { id = post.Id }, null)</th>
                <td>@post.Category.Name</td>
                <td>@post.AddDate</td>
                <td>@post.LastUpdate</td>
                <td class="text-center">
                    @Html.ActionLink("edit", "Edit", "Posts", new { id = post.Id }, new {@class="btn btn-secondary"})
                <button data-post-id="@post.Id" class="btn btn-danger js-delete">Delete</button>
            </td>
        </tr>

        @*</table>
            <div2>
            <h4>@Html.ActionLink(post.PostTitle, "Details", "Posts", new {id = post.Id}, null)</h4>

            <h4>@Html.ActionLink("edit", "Edit", "Posts", new {id = post.Id}, null)</h4>
            <img src="@Url.Content(post.Image)" width="400"/>


            <h5>@post.Category.Name.</h5>
            <button data-post-id="@post.Id" class="btn btn-danger js-delete">Delete</button>
            <hr/>
            </div2>*@
    }
    </tbody>
</table>


@section scripts
{
    <script>
        $(document).ready(function () {
            $("#posts").DataTable();

            $("#posts").on("click", "js-delete",
                function () {
                    var button = $(this);
                    if (confirm("Are you sure you want to delete this post?"))
                        $.ajax({
                            url: "/api/posts/" + button.attr("data-post-id"),
                            method: "DELETE",
                            success: function () {
                                button.parents("tr").remove();
                            }
                        });
                });

        });
    </script>
}
